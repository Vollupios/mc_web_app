@model IntranetDocumentos.Models.ViewModels.FolderFormViewModel

@{
    ViewData["Title"] = Model.Id.HasValue ? "Editar Pasta" : "Nova Pasta";
    ViewData["Description"] = Model.Id.HasValue ? $"Editando pasta: {Model.Name}" : "Criar nova pasta";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="@(Model.Id.HasValue ? "bi bi-pencil" : "bi bi-folder-plus") me-2"></i>
                        @ViewData["Title"]
                    </h4>
                </div>
                
                <form asp-action="@(Model.Id.HasValue ? "EditFolder" : "CreateFolder")" method="post">
                    <div class="card-body">
                        @if (Model.Id.HasValue)
                        {
                            <input type="hidden" asp-for="Id" />
                        }
                        <input type="hidden" asp-for="ParentFolderId" />
                        <input type="hidden" asp-for="DepartmentId" />

                        <!-- Informa√ß√µes da Pasta Pai -->
                        @if (Model.ParentFolderId.HasValue && Model.AvailableParentFolders?.Any() == true)
                        {
                            var parentFolder = Model.AvailableParentFolders.FirstOrDefault(f => f.Id == Model.ParentFolderId);
                            if (parentFolder != null)
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>Pasta pai:</strong>
                                    <i class="@parentFolder.Icon me-1" style="color: @parentFolder.Color;"></i>
                                    @parentFolder.Name
                                </div>
                            }
                        }

                        <!-- Nome da Pasta -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-folder me-1"></i>
                                Nome da Pasta
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Digite o nome da pasta" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Descri√ß√£o -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-text-left me-1"></i>
                                Descri√ß√£o
                                <span class="text-muted">(opcional)</span>
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Descri√ß√£o da pasta (opcional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Departamento -->
                        @if (!Model.Id.HasValue) // S√≥ permite alterar departamento na cria√ß√£o
                        {
                            <div class="mb-3">
                                <label asp-for="DepartmentId" class="form-label">
                                    <i class="bi bi-building me-1"></i>
                                    Departamento
                                </label>
                                <select asp-for="DepartmentId" class="form-select" required>
                                    <option value="">Selecione um departamento</option>
                                    @if (Model.AvailableDepartments != null)
                                    {
                                        @foreach (var dept in Model.AvailableDepartments)
                                        {
                                            <option value="@dept.Id">@dept.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    O departamento define quem pode acessar esta pasta
                                </div>
                            </div>
                        }

                        <!-- Pasta Pai -->
                        @if (!Model.Id.HasValue && Model.AvailableParentFolders?.Any() == true)
                        {
                            <div class="mb-3">
                                <label asp-for="ParentFolderId" class="form-label">
                                    <i class="bi bi-diagram-3 me-1"></i>
                                    Pasta Pai
                                    <span class="text-muted">(opcional)</span>
                                </label>
                                <select asp-for="ParentFolderId" class="form-select">
                                    <option value="">Raiz do departamento</option>
                                    @foreach (var folder in Model.AvailableParentFolders)
                                    {
                                        <option value="@folder.Id">
                                            @string.Join(" ‚Üí ", GetFolderPath(folder, Model.AvailableParentFolders))
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="ParentFolderId" class="text-danger"></span>
                            </div>
                        }

                        <!-- Personaliza√ß√£o Visual -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Color" class="form-label">
                                        <i class="bi bi-palette me-1"></i>
                                        Cor
                                    </label>
                                    <select asp-for="Color" class="form-select color-select">
                                        <option value="#0d6efd" data-color="#0d6efd">üîµ Azul</option>
                                        <option value="#198754" data-color="#198754">üü¢ Verde</option>
                                        <option value="#dc3545" data-color="#dc3545">üî¥ Vermelho</option>
                                        <option value="#fd7e14" data-color="#fd7e14">üü† Laranja</option>
                                        <option value="#6f42c1" data-color="#6f42c1">üü£ Roxo</option>
                                        <option value="#20c997" data-color="#20c997">üü° Turquesa</option>
                                        <option value="#6c757d" data-color="#6c757d">‚ö´ Cinza</option>
                                        <option value="#e83e8c" data-color="#e83e8c">ü©∑ Rosa</option>
                                    </select>
                                    <span asp-validation-for="Color" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Icon" class="form-label">
                                        <i class="bi bi-emoji-smile me-1"></i>
                                        √çcone
                                    </label>
                                    <select asp-for="Icon" class="form-select icon-select">
                                        <option value="bi bi-folder-fill">üìÅ Pasta Padr√£o</option>
                                        <option value="bi bi-briefcase-fill">üíº Trabalho</option>
                                        <option value="bi bi-file-earmark-medical-fill">üè• M√©dico</option>
                                        <option value="bi bi-shield-fill-check">üõ°Ô∏è Seguran√ßa</option>
                                        <option value="bi bi-gear-fill">‚öôÔ∏è Configura√ß√µes</option>
                                        <option value="bi bi-people-fill">üë• Pessoas</option>
                                        <option value="bi bi-bank">üè¶ Financeiro</option>
                                        <option value="bi bi-calendar-fill">üìÖ Agenda</option>
                                        <option value="bi bi-graph-up">üìà Relat√≥rios</option>
                                        <option value="bi bi-archive-fill">üì¶ Arquivo</option>
                                        <option value="bi bi-star-fill">‚≠ê Favoritos</option>
                                        <option value="bi bi-lightning-fill">‚ö° Urgente</option>
                                    </select>
                                    <span asp-validation-for="Icon" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Preview -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-eye me-1"></i>
                                Pr√©via
                            </label>
                            <div class="border rounded p-3 bg-light">
                                <div class="d-flex align-items-center">
                                    <i id="preview-icon" class="bi bi-folder-fill fs-2 me-3" style="color: #0d6efd;"></i>
                                    <div>
                                        <h6 id="preview-name" class="mb-1">Nova Pasta</h6>
                                        <small id="preview-description" class="text-muted">Descri√ß√£o da pasta</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Configura√ß√µes Avan√ßadas -->
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="card border-warning">
                                <div class="card-header bg-warning bg-opacity-10">
                                    <h6 class="mb-0">
                                        <i class="bi bi-gear me-1"></i>
                                        Configura√ß√µes Avan√ßadas (Admin)
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="form-check mb-2">
                                        <input asp-for="IsSystemFolder" class="form-check-input" type="checkbox" />
