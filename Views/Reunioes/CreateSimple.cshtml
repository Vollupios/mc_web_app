@model IntranetDocumentos.Models.ViewModels.ReuniaoViewModel

@{
    ViewData["Title"] = "Nova Reunião - TESTE";
}

<div class="container">
    <h2>Nova Reunião - Teste Simples</h2>
    
    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="Titulo" class="form-label">Título</label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>
        
        <div class="form-group mb-3">
            <label asp-for="Data" class="form-label">Data</label>
            <input asp-for="Data" type="date" class="form-control" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
        
        <div class="form-group mb-3">
            <label asp-for="HoraInicio" class="form-label">Hora Início</label>
            <input asp-for="HoraInicio" type="time" class="form-control" />
            <span asp-validation-for="HoraInicio" class="text-danger"></span>
        </div>
        
        <div class="form-group mb-3">
            <label asp-for="HoraFim" class="form-label">Hora Fim</label>
            <input asp-for="HoraFim" type="time" class="form-control" />
            <span asp-validation-for="HoraFim" class="text-danger"></span>
        </div>
        
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
