@{
    ViewData["Title"] = "Intranet Documentos";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 text-center py-5">
            <h1 class="display-4 text-primary mb-3">
                <i class="bi bi-building"></i>
                Intranet Documentos
            </h1>
            <p class="lead text-muted mb-4">
                Sistema de Gestão Documental Corporativa
            </p>
            
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Bem-vindo ao Sistema de Documentos</h5>
                            <p class="card-text">
                                Faça login para acessar seus documentos, ramais, reuniões e muito mais.
                            </p>
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i>
                                Fazer Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
